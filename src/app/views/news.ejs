<% include header %>
    <div class="row">
        <div class="col-md-6 mt-4 text-center">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Noticias</th>
                    <th>Acción</th>
                </tr>
                <% for (var i = 0; i < news.length; i ++) { %>
                    <tr>
                        <td>
                            <%= news[i].id_news %>
                        </td>
                        <td>
                            <%= news[i].title %>
                        </td>
                        <td>
                            <%= news[i].news %>
                        </td>
                        <td>
                            <a href="/news/eliminar/<%= news[i].id_news %>" class="btn btn-danger">Eliminar</a>
                            <a href="/news/update/<%= news[i].id_news %>" class="btn btn-info">Actualizar</a>

                        </td>
                    </tr>

                    <% } %>
            </table>
        </div>
        <div class="col-md-6 mt-4 card">
            <form class="card-body" action="/news/add" method="post">
                <h3 class="card-title">Add Noticias</h3>
                <div class="form-group">
                    <input name="title" id="caja1" type="text" class="form-control" placeholder="Nuevo Título">
                </div>
                <div class="form-group">
                    <input name="news" id="caja2" type="text" class="form-control" placeholder="Nuevo Contenido">
                </div>
                <input type="submit" class="btn btn-primary">
            </form>
        </div>

    </div>
    <% include footer %>